<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Date</th>
      <th>Time</th>
      <th>Event images</th>
      <th>Winning codes</th>
      <th>Schedule</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.topic %></td>
        <td><%= event.date %></td>
        <td><%= event.time %></td>
        <td><%= event.event_images %></td>
        <td><%= event.winning_codes %></td>
        <td><%= event.schedule %></td>
        <td><%= event.user %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

